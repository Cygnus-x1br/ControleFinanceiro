<div class="container">

    <h3 class="teal-text darken-4-text" style="font-weight:lighter;">Inclui novo cartão</h3>

    <div class="row">
        <form action="saveCard" method="post">
            <div class="input-field col s12">
                <input id="card_number" type="text" class="validate" name="card_number">
                <label for="card_number">Número do cartão</label>
            </div>
            <div class="input-field col s12">
                <select name="card_operator">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="visa">Visa</option>
                    <option value="mastercard">Mastercard</option>
                    <option value="elo">Elo</option>
                    <option value="amex">American Express</option>
                </select>
                <label>Bandeira</label>
            </div>
            <div class="input-field col s3">
                <input id="pay_date" type="number" class="validate" name="card_pay_date" min="1" max="31">
                <label for="pay_date">Data de vencimento</label>
            </div>
            <div class="input-field col s3">
                <input id="close_date" type="number" class="validate" name="card_close_date" min="1" max="31">
                <label for="close_date">Data de fechamento</label>
            </div>
            <div class="input-field col s6">
                <input id="card_limit" type="text" class="validate" name="card_limit">
                <label for="close_date">Limite</label>
            </div>
            <button class="btn waves-effect waves-light" type="submit">Submit
                <i class="material-icons right">send</i>
            </button>
        </form>
    </div>
</div>